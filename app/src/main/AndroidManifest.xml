<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permiso necesario para acceder a internet -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Example"
        tools:targetApi="31">
        <activity
            android:name=".ui.principal.EditPrincipal"
            android:exported="false" />
        <activity
            android:name=".ui.incidencia.AgregarEstudiantes"
            android:exported="false" />
        <activity
            android:name=".ui.tutoria.DescripcionRevisar"
            android:exported="false" />
        <activity
            android:name=".ui.incidencia.DescripcionIncidencia"
            android:exported="false" />
        <activity
            android:name=".ui.incidencia.AgregarIncidencia"
            android:exported="false" />
        <activity
            android:name=".ui.estudiante.AddEstudiante"
            android:exported="false" />
        <activity
            android:name=".ui.profesor.AddProfesor"
            android:exported="false" />
        <activity
            android:name=".ui.tutor.AddTutor"
            android:exported="false" />
        <activity
            android:name=".ui.estudiante.EditEstudiante"
            android:exported="false" />
        <activity
            android:name=".ui.profesor.EditProfesor"
            android:exported="false" />
        <activity
            android:name=".InicioSesion"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BarraLateral"
            android:exported="false"
            android:label="@string/title_activity_barra_lateral"
            android:theme="@style/Theme.Example.NoActionBar" /> <!-- Meta-data para servicios de Firebase (si es necesario) -->
        <meta-data
            android:name="com.google.firebase.analytics.APP_ID"
            android:value="@string/google_app_id" />
        <meta-data
            android:name="com.google.firebase.crashlytics.SEND_REPORTS_AT_CRASH"
            android:value="true" /> <!-- Meta-data para Google Sign-In -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="io.devexpert.android_firebase.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>
    </application>

</manifest>