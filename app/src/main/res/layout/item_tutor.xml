<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/background_white_element_full"
    android:padding="10dp"
    android:layout_marginVertical="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageViewTutor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:tint="@color/Primary_blue_sky"
        android:src="@drawable/icon_tutor"
        android:contentDescription="@string/desc_tutor_image"
        tools:ignore="UseAppTint" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewTutorNombreCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:fontFamily="@font/montserrat_bold"
            android:text="Nombres Completos"
            android:textColor="@color/Primary_blue_sky"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/textViewTutorCelular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:fontFamily="@font/montserrat"
            android:text="Celular"
            android:textColor="@color/Primary_blue_sky"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textViewTutorCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:fontFamily="@font/montserrat"
            android:text="Email"
            android:textColor="@color/Primary_blue_sky"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonSeleccionar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/transparent_color"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_seleccionar"
        app:tint="@color/Primary_white"
        android:contentDescription="@string/desc_select_button" />
</LinearLayout>
