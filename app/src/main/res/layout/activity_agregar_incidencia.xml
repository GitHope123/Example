<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue"
    tools:context=".ui.Incidencia.AgregarIncidencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:padding="10sp"
                android:gravity="center"
                android:text="20/8/2024"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_text_transparent"
                android:textColor="@color/Primary_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:padding="10sp"
                android:gravity="center"
                android:background="@drawable/background_text_transparent"
                android:text="10:00 a.m."
                android:textColor="@color/Primary_white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"

                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Estudiante"
                    android:textColor="@color/Primary_white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Maria Gonzales Prada"
                    android:textColor="@color/Primary_white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:padding="10sp"
                    android:text="@string/hint_gravedad"
                    android:textColor="@color/Primary_white"
                    android:textSize="14sp"></TextView>

                <Spinner
                    android:id="@+id/spinnerGravedad"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/search_view_query_background"
                    android:gravity="center_vertical"
                    android:outlineSpotShadowColor="@color/Primary_white"
                    android:prompt="@string/hint_degree" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:padding="10sp"
                    android:text="@string/hint_tipo"
                    android:textColor="@color/Primary_white"
                    android:textSize="14sp"></TextView>

                <Spinner
                    android:id="@+id/spinnerTipo"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/search_view_query_background"
                    android:gravity="center_vertical"
                    android:outlineSpotShadowColor="@color/Primary_white"
                    android:prompt="@string/hint_degree" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/hint_detalle"
                android:textColor="@color/Primary_white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:hint="Escribe aquÃ­..."
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLines="15"
                android:background="@drawable/background_text_transparent"
                android:minLines="1"
                android:overScrollMode="always"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/Primary_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:padding="10sp"
                android:text="@string/hint_evidencia"
                android:textColor="@color/Primary_white"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/imageButtonEvidencia"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/background_text_transparent"
                android:padding="30sp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_camera"
                app:tint="@color/Primary_white" />

            <Button
                android:id="@+id/btnRegistrarIncidencia"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_yellow_buttom"
                android:drawableLeft="@drawable/ic_upload"
                android:drawableTint="@color/Primary_black"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/hint_registrar_incidencia"
                android:textColor="@color/Secondary_brown" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>