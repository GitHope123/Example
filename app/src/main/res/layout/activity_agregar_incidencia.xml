<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="@drawable/background_primary_blue"
    tools:context=".ui.Incidencia.AgregarIncidencia">

        <SearchView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_view_query_background"
            app:showAsAction="always"
            android:layout_marginBottom="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="520dp" />

        <Button
            android:id="@+id/button2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/Secondary_brown"
            android:background="@drawable/background_yellow_buttom"
            android:text="Ir a registrar"
            android:layout_marginHorizontal="50dp"/>

</LinearLayout>