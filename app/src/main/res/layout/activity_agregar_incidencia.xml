<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue"
    tools:context=".ui.Incidencia.AgregarIncidencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/background_text_transparent"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="10dp"
                android:text="20/8/2024"
                android:textColor="@color/Primary_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_text_transparent"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="10dp"
                android:text="10:00 a.m."
                android:textColor="@color/Primary_white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Estudiante"
                    android:textColor="@color/Primary_white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Maria Gonzales Prada"
                    android:textColor="@color/Primary_white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/hint_gravedad"
                    android:textColor="@color/Primary_white"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerGravedad"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_weight="2"
                    android:background="@drawable/search_view_query_background"
                    android:gravity="center_vertical"
                    android:spinnerMode="dropdown"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/hint_tipo"
                    android:textColor="@color/Primary_white"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerTipo"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_weight="2"
                    android:background="@drawable/search_view_query_background"
                    android:gravity="center_vertical"
                    android:spinnerMode="dropdown"
                    android:padding="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:padding="10dp"
                android:text="@string/hint_detalle"
                android:textColor="@color/Primary_white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etMultiLine"
                android:padding="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text_transparent"
                android:fontFamily="@font/montserrat"
                android:gravity="top|start"
                android:hint="Escribe aquÃ­..."
                android:inputType="textMultiLine"
                android:lines="9"
                android:maxLines="6"
                android:paddingTop="20sp"
                android:paddingStart="15sp"
                android:scrollbars="vertical"
                android:textColor="@color/Primary_white"
                android:textColorHint="@color/Transparent_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:padding="10dp"
                android:text="@string/hint_evidencia"
                android:textColor="@color/Primary_white"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/imageButtonEvidencia"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/background_text_transparent"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_camera"
                app:tint="@color/Primary_white" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRegistrarIncidencia"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_yellow_buttom"
            android:drawableLeft="@drawable/ic_upload"
            android:drawableTint="@color/Secondary_brown"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/hint_registrar_incidencia"
            android:textColor="@color/Secondary_brown" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
