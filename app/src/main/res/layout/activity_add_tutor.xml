<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_primary_blue"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/search_view_query_background"
            app:iconifiedByDefault="false"
            app:showAsAction="always" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/Primary_white"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginVertical="20sp"
            android:text="Grado y seccion a tutelar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_text_transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewGrado"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                app:srcCompat="@drawable/icon_grado" />
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spinnerGrado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_text_transparent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewSeccion"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                app:srcCompat="@drawable/icon_seccion" />
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spinnerSeccion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>


        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginHorizontal="70sp"
            android:background="@drawable/background_yellow_buttom"
            android:drawableLeft="@drawable/ic_upload"
            android:drawableTint="@color/Secondary_brown"
            android:fontFamily="@font/montserrat_bold"
            android:text="Agregar"
            android:textColor="@color/Secondary_brown" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>