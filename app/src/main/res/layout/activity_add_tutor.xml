<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_view_query_background"
            app:iconifiedByDefault="false"
            app:showAsAction="always" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Grado y secciÃ³n a tutelar"
            android:textColor="@color/Primary_white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_text_transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewGrado"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/icon_grado" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerGrado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_text_transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewSeccion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/icon_seccion" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerSeccion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonAgregar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            style="@style/ButtonStyle"
            android:backgroundTint="@color/Primary_blue"
            android:drawableLeft="@drawable/icon_list"
            android:drawableTint="@color/Primary_white"
            android:fontFamily="@font/montserrat_bold"
            android:text="Seleccionar"
            android:textColor="@color/Primary_white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProfesores"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10sp"
            tools:listitem="@layout/item_tutor"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_yellow_buttom"
            android:drawableLeft="@drawable/icon_list"
            android:drawableTint="@color/Secondary_brown"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/Secondary_brown"
            android:textSize="14dp"
            android:text="Agregar" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
