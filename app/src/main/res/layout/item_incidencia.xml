<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/Primary_transparent_blue_black"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginEnd="7dp">

        <ImageView
            android:id="@+id/tvImagenGravedad"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:padding="2sp"
            android:src="@drawable/ic_alert"
            app:tint="@color/color_orange" />

        <TextView
            android:id="@+id/tvGravedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Moderado"
            android:textColor="@color/color_orange"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.55"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="13/08/2024"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp"></TextView>

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent"></Space>

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="4:45pm"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp"></TextView>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"></Space>
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="end"
                android:text="Pendiente"
                android:textColor="@color/color_red"
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"></Space>

        <TextView
            android:id="@+id/tvEstudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Torres Ramos Sebastian Rodrigo"
            android:textColor="@color/Primary_white"
            android:textSize="12sp"></TextView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"></Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvGrado"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="3"
                android:layout_marginEnd="10dp"
                android:textColor="@color/Primary_white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvSeccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="A"
                android:textColor="@color/Primary_white"
                android:textSize="12sp" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"></Space>

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Conductual"
            android:textColor="@color/Primary_white"
            android:textSize="12sp"></TextView>
    </LinearLayout>



</LinearLayout>