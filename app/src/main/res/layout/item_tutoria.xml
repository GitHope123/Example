<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@color/Primary_transparent_blue_black"
    android:orientation="horizontal"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:src="@drawable/ic_alert"
            app:tint="@color/color_orange"
            android:padding="2sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moderado"
            android:gravity="center"
            android:textColor="@color/color_orange"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.55"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/08/2024"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_bold"/>

            <Space
                android:layout_width="40dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:45pm"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_bold"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:id="@+id/tvEstudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Torres Ramos Sebastian Rodrigo"
            android:textColor="@color/Primary_white"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:id="@+id/tvProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ana Maria Campos Cruz"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/Primary_white"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:id="@+id/tvCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matematica"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/Primary_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            android:gravity="center"
            android:textColor="@color/color_red"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_bold"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_ir"
            android:scaleType="fitCenter"
            app:tint="@color/Primary_white"
            android:background="@color/transparent_color"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>