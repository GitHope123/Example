<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@drawable/background_white_element_full"
    android:backgroundTint="@color/Primary_transparent_blue_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textViewNombreCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_estudiante"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/Primary_blue_sky"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_vertical"
                    android:text="Nombre del Estudiante"
                    android:textColor="@color/Primary_blue_sky"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewDni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/icon_dni"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/Primary_blue_sky"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:text="ID del Estudiante"
                    android:textColor="@color/Primary_blue_sky"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/studentGradeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_grado"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/Primary_blue_sky"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center_vertical"
                        android:text="Grado"
                        android:textColor="@color/Primary_blue_sky"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/studentSectionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center_vertical"
                        android:text="SecciÃ³n"
                        android:textColor="@color/Primary_blue_sky"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButtonEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_text_transparent"
                android:backgroundTint="@color/transparent_color"
                android:padding="4dp"
                android:src="@drawable/icon_edit" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
