<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_text_transparent"
    android:backgroundTint="@color/Primary_transparent_blue_black"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewNombreCompletos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10sp"
                    android:drawableLeft="@drawable/icon_docente"
                    android:drawableTint="@color/Primary_blue_sky"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Nombre del Profesor"
                    android:textColor="@color/Primary_blue_sky"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_white_element"
                    android:padding="5sp"
                    app:srcCompat="@drawable/icon_edit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/icon_call"
                android:drawablePadding="10sp"
                android:drawableTint="@color/Primary_blue_sky"
                android:fontFamily="@font/montserrat"
                android:text="TelÃ©fono"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewDomicilio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat"
                android:drawableLeft="@drawable/icon_direccion"
                android:drawablePadding="10sp"
                android:drawableTint="@color/Primary_blue_sky"
                android:text="Domicilio"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
