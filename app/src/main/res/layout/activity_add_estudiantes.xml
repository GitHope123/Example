<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue"
    android:padding="10dp"
    tools:context=".ui.Estudiante.AddEstudiante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="150dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/icon_student" />

        <EditText
            android:id="@+id/addNameStudent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Transparent_color"
            android:drawableLeft="@drawable/icon_student"
            android:drawablePadding="10sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:hint="@string/hint_name"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/Primary_white"
            android:textSize="14sp"></EditText>


        <EditText
            android:id="@+id/addLastNameStudent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Transparent_color"
            android:drawableLeft="@drawable/icon_docente"
            android:drawablePadding="10sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:hint="@string/hint_lastName"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/Primary_white"
            android:textSize="14sp"></EditText>

        <EditText
            android:id="@+id/addPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Transparent_color"
            android:drawableLeft="@drawable/icon_call"
            android:drawablePadding="10sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:hint="@string/hint_phone"
            android:inputType="phone"
            android:maxLength="9"
            android:padding="10sp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/Primary_white"
            android:textSize="14sp"></EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Primary_blue"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:padding="10sp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_grado"
                android:gravity="center_vertical"
                android:text="@string/hint_degree"
                android:textColor="@color/Primary_white"
                android:textSize="14sp"></TextView>
            <Spinner
                android:id="@+id/addSpinnerGradoStudent"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:outlineSpotShadowColor="@color/Primary_white"
                android:prompt="@string/hint_degree"
                android:backgroundTint="@color/Transparent_color"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Primary_blue"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:padding="10sp"
                android:drawablePadding="10dp"
                android:text="@string/hint_section"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_seccion"
                android:textColor="@color/Primary_white"
                android:textSize="14sp"></TextView>

            <Spinner
                android:id="@+id/addSpinnerSectionStudent"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:outlineSpotShadowColor="@color/Primary_white"
                android:prompt="@string/hint_degree" />
        </LinearLayout>

        <EditText
            android:id="@+id/addDniStudent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Transparent_color"
            android:drawableLeft="@drawable/icon_dni"
            android:drawablePadding="10sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:hint="@string/hint_DNI"
            android:inputType="number"
            android:maxLength="8"
            android:padding="10sp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/Primary_white"
            android:textSize="14sp"></EditText>

        <Button
            android:id="@+id/buttonAddStudent"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:drawableLeft="@drawable/ic_upload"
            android:drawableTint="@color/Secondary_brown"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_yellow_buttom"
            android:fontFamily="@font/montserrat_bold"
            android:text="Agregar"
            android:textColor="@color/Secondary_brown" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>