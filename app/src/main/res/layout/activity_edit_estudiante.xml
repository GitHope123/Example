<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue"
    android:padding="10dp"
    tools:context=".ui.estudiantes.EditEstudiante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="150dp">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/icon_student" />
        <EditText
            android:id="@+id/editTextNombres"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Transparent_color"
            android:drawableLeft="@drawable/icon_student"
            android:drawablePadding="10sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:hint="@string/hint_name"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/Primary_white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextApellidos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Transparent_color"
            android:drawableLeft="@drawable/icon_docente"
            android:drawablePadding="10sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:hint="@string/hint_lastName"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/Primary_white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Transparent_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_grado"
                android:fontFamily="@font/montserrat"
                android:padding="10sp"
                android:text="@string/hint_degree"
                android:textColor="@color/Primary_white"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerGrado"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:popupTheme="@style/SpinnerItemStyle"
                style="@style/SpinnerStyle"
                android:outlineSpotShadowColor="@color/Primary_white"
                android:prompt="@string/hint_degree" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white_element_full"
            android:backgroundTint="@color/Transparent_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_seccion"
                android:padding="10sp"
                android:text="@string/hint_section"
                android:textColor="@color/Primary_white"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerSection"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:popupTheme="@style/SpinnerItemStyle"
                style="@style/SpinnerStyle"
                android:outlineSpotShadowColor="@color/Primary_white"
                android:prompt="@string/hint_section" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonModificar"
                style="@style/ButtonStyle"
                android:layout_width="100dp"
                android:layout_height="70sp"
                android:layout_weight="1"
                android:backgroundTint="@color/Primary_yellow"
                android:fontFamily="@font/montserrat_bold"
                android:text="Modificar"
                android:textColor="@color/Secondary_brown" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/buttonEliminar"
                style="@style/ButtonStyle"
                android:layout_width="100dp"
                android:layout_height="70sp"
                android:layout_weight="1"
                android:backgroundTint="@color/Secondary_red"
                android:fontFamily="@font/montserrat_bold"
                android:letterSpacing="0"
                android:text="Eliminar"
                android:textColor="@color/Primary_white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
