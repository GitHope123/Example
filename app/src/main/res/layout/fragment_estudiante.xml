<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue"
    android:orientation="vertical"
    tools:context=".ui.estudiantes.EstudianteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/ThemeOverlay.SearchView"
                android:background="@drawable/search_view_query_background"
                app:iconifiedByDefault="false"
                android:queryHint="Buscar..."
                app:showAsAction="always"
                android:layout_weight="20"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerGrado"
                android:layout_width="70sp"
                android:layout_height="55sp"
                android:layout_weight="0.2"
                android:background="@drawable/search_view_query_background"
                android:outlineSpotShadowColor="@color/Primary_white"/>

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerSeccion"
                android:layout_width="70sp"
                android:layout_height="55sp"
                android:layout_weight="0.2"
                android:background="@drawable/search_view_query_background" />
        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_student" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/addButtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/icon_add_student"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@color/Primary_yellow"
        android:layout_margin="20dp"
        tools:contentDescription="@string/action_bottom"/>
</FrameLayout>
