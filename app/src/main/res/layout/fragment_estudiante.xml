<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.Estudiante.EstudianteFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/search_view_query_background"
            app:iconifiedByDefault="false"
            app:showAsAction="always" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinnerGrado"
            android:layout_width="70sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="@drawable/search_view_query_background" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerSeccion"
            android:layout_width="70sp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:background="@drawable/search_view_query_background" />
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonAceptar"
            android:layout_width="70sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:text="@string/btn_aceptar"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/search_view_query_background"
            android:backgroundTint="@color/Primary_yellow">
        </Button>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_student" />
</LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/addButtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/icon_add_student"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@color/Primary_yellow"
        android:layout_margin="20sp"
        tools:contentDescription="@string/action_bottom">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</FrameLayout>
