<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editPrincipal"
    android:background="@drawable/background_primary_blue"
    tools:context=".ui.principal1.Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_user_barra_lateral"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewTutorBooleam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_element"
                android:backgroundTint="@color/Primary_yellow"
                android:fontFamily="@font/montserrat"
                android:padding="5dp"
                android:text="Docente"
                android:textColor="@color/Primary_white"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.627"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_blue_transparent"
            android:backgroundTint="@color/Transparent_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/icon_docente"
                android:drawablePadding="10sp"
                android:drawableTint="@color/Primary_blue_sky"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:padding="10sp"
                android:text="Nombre:"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edTxtNombre"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/Transparent_color"
                android:background="@drawable/background_white_element_full"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:hint=""
                android:inputType="none"
                android:paddingStart="10dp"
                android:textColor="@color/Primary_blue_sky"
                android:textColorHint="@color/Primary_white"
                android:textSize="13sp"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_blue_transparent"
            android:backgroundTint="@color/Transparent_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewApellido"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/icon_apellido"
                android:drawablePadding="10sp"
                android:drawableTint="@color/Primary_blue_sky"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:padding="10sp"
                android:text="Apellidos:"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edTxtApellido"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/Transparent_color"
                android:background="@drawable/background_white_element_full"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:inputType="none"
                android:paddingStart="10dp"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="13sp"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_blue_transparent"
            android:backgroundTint="@color/Transparent_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCelular"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/icon_call"
                android:drawablePadding="10sp"
                android:drawableTint="@color/Primary_blue_sky"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:padding="10sp"
                android:text="Celular:"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edTextCelular"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/Transparent_color"
                android:background="@drawable/background_white_element_full"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:maxLength="9"
                android:paddingStart="10dp"
                android:textColor="@color/Primary_white"
                android:textSize="13sp"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_blue_transparent"
            android:backgroundTint="@color/Transparent_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCargo"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/icon_login_email"
                android:drawablePadding="10sp"
                android:drawableTint="@color/Primary_blue_sky"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:padding="10sp"
                android:text="Correo:"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edTextCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_white_element_full"
                    android:backgroundTint="@color/Transparent_color"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="10dp"
                    android:textColor="@color/Primary_blue_sky"
                    android:textSize="13sp"
                    tools:text="" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_blue_transparent"
            android:backgroundTint="@color/Transparent_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/icon_login_password"
                android:drawablePadding="10sp"
                android:drawableTint="@color/Primary_blue_sky"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:padding="10sp"
                android:text="Password:"
                android:textColor="@color/Primary_blue_sky"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextPasswordPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/Transparent_color"
                    android:background="@drawable/background_white_element_full"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:maxLength="8"
                    android:text=""
                    android:paddingStart="10dp"
                    android:textColor="@color/Primary_white"
                    android:textColorHint="@color/Primary_white"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/eyeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Toggle password visibility"
                    android:src="@drawable/ic_eye_off" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonModificar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/ButtonStyle"
                android:fontFamily="@font/montserrat_bold"
                android:text="Modificar"
                android:drawableLeft="@drawable/icon_modificar"
                android:drawableTint="@color/Secondary_brown"
                android:backgroundTint="@color/Primary_yellow"
                android:textColor="@color/Secondary_brown" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>