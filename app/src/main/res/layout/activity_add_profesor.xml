<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextNombres"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/icon_student"
            android:hint="Nombres"
            android:textColorHint="@color/Primary_white"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="@drawable/background_text_transparent"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/editTextApellidos"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/icon_docente"
            android:hint="Apellidos"
            android:textColorHint="@color/Primary_white"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="@drawable/background_text_transparent"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/editTextDomicilio"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/icon_direccion"
            android:hint="Domicilio"
            android:textColorHint="@color/Primary_white"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="@drawable/background_text_transparent"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/editTextCelular"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/icon_call"
            android:hint="Celular"
            android:textColorHint="@color/Primary_white"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="@drawable/background_text_transparent"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/editTextMateria"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/icon_class"
            android:hint="Materia"
            android:textColorHint="@color/Primary_white"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="@drawable/background_text_transparent"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10sp"
            android:gravity="center_vertical"
            android:background="@drawable/background_blue_transparent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editTextGrado"
                android:layout_width="100sp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:hint="Grado"
                android:textColorHint="@color/Primary_white"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:background="@drawable/search_view_query_background"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="10sp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/editTextSeccion"
                android:layout_width="177dp"
                android:layout_height="50dp"
                android:background="@drawable/search_view_query_background"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:hint="Seccion"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/Primary_white"
                android:textSize="14sp" />
            <Space
                android:layout_width="10sp"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/search_view_query_background"
                app:srcCompat="@drawable/icon_add" />



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/Secondary_brown"
            android:background="@drawable/background_yellow_buttom"
            android:text="Agregar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
