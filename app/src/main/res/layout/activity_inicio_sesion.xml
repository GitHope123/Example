<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_primary_blue"
    tools:context=".inicioSesion">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="650dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            app:srcCompat="@drawable/icon_colegio_parroquial" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:fontFamily="@font/montserrat_bold"
            android:letterSpacing="0.1"
            android:text="Colegio Parroquiales\nSan José"
            android:textAlignment="center"
            android:textColor="@color/Primary_white"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_text_transparent"
            android:ems="10"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/icon_login_email"
            android:hint="Email"
            android:textColorHint="@color/Primary_white"
            android:fontFamily="@font/montserrat"
            android:inputType="text"
            android:padding="10sp"
            android:text="Username@undc.edu.pe"
            android:textColor="@color/Primary_white"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_text_transparent"
            android:ems="10"
            android:hint="Password"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/icon_login_password"
            android:textColorHint="@color/Primary_white"
            android:fontFamily="@font/montserrat"
            android:inputType="textPassword"
            android:padding="10sp"
            android:text="Password"
            android:textColor="@color/Primary_white"
            android:textSize="14sp" />
        <Button
            android:id="@+id/buttonIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/background_yellow_buttom"
            android:fontFamily="@font/montserrat_bold"
            android:text="INICIAR SESION"
            android:textColor="@color/Secondary_brown"
            android:textSize="14sp" />
        <Button
            android:id="@+id/buttonGoogle"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50sp"
            android:drawableRight="@drawable/icon_google"
            android:fontFamily="@font/montserrat"
            android:text="Continuar con google" />
        <TextView
            android:id="@+id/textViewLema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="20sp"
            android:text="“Educando en libertad con la correspondiente responsabilidad” "
            android:layout_marginBottom="30sp"
            android:textAlignment="center"
            android:textColor="@color/Primary_white"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>