<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Example" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/Primary_yellow</item>
        <item name="colorPrimaryVariant">@color/Primary_blue_black</item>
        <item name="colorOnPrimary">@color/Primary_white</item>
        <item name="colorSecondary">@color/Primary_blue</item>
        <item name="colorOnSecondary">@color/Primary_black</item>

        <!-- Button colors -->
        <item name="buttonStyle">@style/ButtonStyle</item>

        <!-- Default text appearance -->
        <item name="textAppearanceBody1">@style/TextAppearance.Body</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Headline</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Headline</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Headline</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Headline</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Subtitle</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Overline</item>
    </style>

    <style name="Theme.Example" parent="Base.Theme.Example" />

    <!-- Custom button style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- Establece el color de fondo del botón -->
        <item name="android:backgroundTint">@color/Primary_white</item>
        <!-- Establece el color del texto del botón -->
        <item name="android:textColor">@color/Secondary_brown</item>
        <!-- Asegúrate de que el texto no esté en mayúsculas -->
        <item name="android:textAllCaps">false</item>
        <!-- Ajusta el espaciado entre letras (puedes ajustar el valor según tus necesidades) -->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.Body" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF000000</item> <!-- Negro por defecto, cambia según tu necesidad -->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF000000</item> <!-- Negro por defecto, cambia según tu necesidad -->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF000000</item> <!-- Negro por defecto, cambia según tu necesidad -->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FF000000</item> <!-- Negro por defecto, cambia según tu necesidad -->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.Overline" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FF000000</item> <!-- Negro por defecto, cambia según tu necesidad -->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Theme.Example.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Example.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Example.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

