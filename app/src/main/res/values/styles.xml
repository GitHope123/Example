<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para los elementos del menú -->
    <style name="MenuItemText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF000000</item> <!-- Color del texto -->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Estilo personalizado para NavigationView -->
    <style name="CustomNavigationView">
        <item name="android:textAppearance">@style/MenuItemText</item>
    </style>

    <!-- Define un estilo personalizado para el Spinner -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00BFA5</item> <!-- Color del texto -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item> <!-- Tamaño del texto -->
        <item name="android:background">@drawable/background_spinner</item> <!-- Fondo personalizado -->
        <item name="android:padding">8dp</item> <!-- Padding alrededor del texto -->
    </style>
</resources>
