<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Background color -->
            <solid android:color="@color/Primary_white" />
            <!-- Border color and width -->
            <stroke
                android:width="1dp"
                android:color="@color/Transparent_blue_black" /> <!-- Black border -->
            <!-- Corner radius for rounded edges (optional) -->
            <corners android:radius="5dp" /> <!-- You can adjust this value or remove it for sharp corners -->
        </shape>
    </item>
</selector>
