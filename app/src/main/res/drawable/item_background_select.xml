<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el ítem está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" /> <!-- Radio del borde redondeado -->
            <solid android:color="@color/colorItemSelected" /> <!-- Color cuando se presiona -->
        </shape>
    </item>
    <!-- Estado por defecto -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" /> <!-- Radio del borde redondeado -->
            <solid android:color="@color/Transparent_blue_black" /> <!-- Color por defecto -->
        </shape>
    </item>
</selector>
